  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
      >

        <ImageView
            android:id="@+id/upicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/notif" />

        <TextView
            android:id="@+id/upname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/upicon"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/upicon"
            android:text="Event Name"
            android:textColor="#000000"
            android:textStyle="bold"
            android:typeface="sans" 
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/updesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/upname"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/upname"
            android:text="Update Description" 
            android:textColor="#000000"
            android:textStyle="italic"
            />

        <TextView
            android:id="@+id/uptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/upname"
            android:text="5 hrs ago"
            android:layout_alignLeft="@+id/upname"
            android:textSize="10dip"
        	android:textColor="#10bcc9"
        	android:textStyle="bold"
        	android:gravity="left"
        	android:typeface="sans" 
            />

    </RelativeLayout>